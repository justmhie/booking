<h1><%= @hotel.hotel_name %></h1>
<p><strong>Location:</strong> <%= @hotel.location %></p>
<p><strong>Description:</strong> <%= @hotel.description %></p>
<p><strong>Amenities:</strong> <%= @hotel.amenities %></p>
<p><strong>Contact:</strong> <%= @hotel.contact_details %></p>
<h2>Rooms</h2>
<ul>
  <% @hotel.room_types.each do |room| %>
    <li><%= room.type %>: $<%= room.price_per_night %> per night, capacity: <%= room.capacity %></li>
  <% end %>
</ul>
<%= link_to 'Book Now', new_hotel_booking_path(@hotel), class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_hotel_path(@hotel) %> |
<%= link_to 'Back', hotels_path %>
<%= link_to 'Delete', @hotel, method: :delete, data: { confirm: 'Are you sure?' } %>

