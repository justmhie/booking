<!DOCTYPE html>
<html>
<head>
  <title>ChatGenie Hotel Booking</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all' %>

</head>
<body>
  <header>
    <div class="container">
      <h1>ChatGenie Hotel Booking</h1>
      <nav>
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Hotels', hotels_path %></li>
          <% if current_user %>
            <li><%= link_to 'My Bookings', bookings_path %></li>
            <li><%= link_to 'Reviews', reviews_path %></li>
            <% if current_user.admin? %>
              <li><%= link_to 'Admin Dashboard', admin_dashboard_path %></li>
            <% end %>
            <li><%= link_to 'Logout', logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Register', signup_path %></li>
            <li><%= link_to 'Login', new_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </div>

  <footer>
    <div class="container">
      <p>&copy; <%= Time.now.year %> ChatGenie Hotel Booking</p>
    </div>
  </footer>
</body>
</html>
