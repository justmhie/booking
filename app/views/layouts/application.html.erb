<!DOCTYPE html>
<html>
  <head>
    <title>ChatGenieHotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
    <% if current_user %>
      <% if current_user_is_admin? %>
        <%= link_to 'Admin Dashboard', admin_path %>
        <%= link_to 'Manage Hotels', manage_hotels_admin_path %>
        <%= link_to 'View Bookings', view_bookings_admin_path %>
        <%= link_to 'Manage Users', manage_users_admin_path %>
      <% end %>
      <%= link_to 'Logout', logout_path, method: :delete %>
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
