<h1>All Room Types</h1>

<table>
  <thead>
    <tr>
      <th>Hotel</th>
      <th>Type</th>
      <th>Description</th>
      <th>Capacity</th>
      <th>Price per Night</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_types.each do |room_type| %>
      <tr>
        <td><%= room_type.hotel.hotel_name %></td>
        <td><%= room_type.type %></td>
        <td><%= room_type.description %></td>
        <td><%= room_type.capacity %></td>
        <td><%= room_type.price_per_night %></td>
        <td><%= link_to 'Show', room_type %></td>
        <td><%= link_to 'Edit', edit_room_type_path(room_type) %></td>
        <td><%= link_to 'Delete', room_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Room Type', new_room_type_path %>
